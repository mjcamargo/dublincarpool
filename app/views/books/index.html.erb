
 <h1>Booked</h1>
<table class="center table-striped table-dark">
  <thead>
    <tr class="bg-primary">
      <th>Status</th>
      <th>Total</th>
      <th>Seats</th>
      <th>Trip ID</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr >
        <td><%= book.status %></td>
        <td><%= book.total %></td>
        <td><%= book.seats %></td>
        <td><%= book.trip_id %></td>
        <td><%= link_to 'show', book_path(:id => book.trip_id), :class => 'btn btn-primary' %></td>

       </tr>
    <% end %>
  </tbody>
</table>

<br>

